<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dynamicdrillers.sagy.AboutAppActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_text">
            <com.shashank.sony.fancyaboutpagelib.FancyAboutPage
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aboutpage">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="180dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/dycx"
                    app:civ_border_color="#40FFFFFF"
                    app:civ_border_width="10dp"
                    android:id="@+id/circularImageView" />
            </com.shashank.sony.fancyaboutpagelib.FancyAboutPage>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
